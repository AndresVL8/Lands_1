<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lands_1.views.LoginPage"
             Title="Login">
    <ContentPage.Content>
        <StackLayout
         BackgroundColor="Black"
         Padding="10,20,10,5">
            <Label
                
                FontSize="Large"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Text="Lands">
                
             </Label>
            <Image
                Source="cia"
                WidthRequest="200">
                
            </Image>
            <Grid
                Margin="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
            
            <Label 
                Grid.Row="0"
                Grid.Column="0"
                Text="E-Mail"
                TextColor="White">
            </Label>

                <Entry
               Grid.Row="0"
               Grid.Column="1"
               Keyboard="Email"
                Placeholder="Enter you Email"
                    TextColor="White"
                PlaceholderColor="White">

                </Entry>
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Text="Password"
                    TextColor="White">
                </Label>
            <Entry
                Grid.Row="1"
                Grid.Column="1"
                IsPassword="True"
                Placeholder="Enter your Password"
                   PlaceholderColor="White">|

                </Entry>
            </Grid>
            <ActivityIndicator>
                
            </ActivityIndicator>
             
            <Button
                BackgroundColor="Crimson"
                Text="login">
                
            </Button>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>